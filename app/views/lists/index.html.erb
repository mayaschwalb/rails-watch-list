

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://concreteplayground.com/content/uploads/2015/05/Astor.jpg);">
  <div class="container">
    <h1><%="Save any kind of movies"%></h1>
    <%= link_to "Create a new list", new_list_path, class:"btn btn-primary" %>
  </div>
</div>

<div class="section-container">
  <div><%@lists.each do | list |%></div>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <p><%=link_to list.name, list_path(list)%></p>
    </div>
  <div><%end%></div>
</div>
